{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "fonts/*": [
                "src/fonts/*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "styles/*": [
                "src/styles/*"
            ],
            "src/*": [
                "src/*"
            ],
            "~/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
            "es6"
        ],
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}